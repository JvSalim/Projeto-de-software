@startuml
agent "Aluno" as AL
agent "InterfaceDeUsuario" as IU
agent "VantagemController" as VC
agent "EmailService" as ES
agent "EmpresaParceira" as EP

AL -> IU : 1. resgatarVantagem()
IU -> VC : 2. enviarResgateVantagem()
VC -> ES : 3. enviarEmailCupom(aluno, codigo)
ES -> AL : 4. Recebe e-mail com cupom
VC -> EP : 5. notificarEmpresaParceira(empresa, codigo)
ES -> EP : 6. enviarEmailParceiro(empresa, codigo)

AL -> IU : 7. registrarGanhoDeMoedas()
IU -> VC : 8. enviarRegistroMoedas()
VC -> ES : 9. enviarEmailGanhoMoedas(aluno, quantidade)
ES -> AL : 10. Recebe e-mail com notificação
@enduml
