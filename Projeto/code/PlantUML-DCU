@startuml

note "Gerenciar = Criar, editar e apagar." as N2

left to right direction

:Representante do sistema de cobrança: as cobranca
:Representante do sistema de matricula: as matricula
:Secretária da universidade: as secretaria

package "Autenticação" {
  (Fazer login)
  (Acessar o sistema)
}

package "Ações do Aluno" {
  (Escolher disciplinas)
  (Verificar vagas na disciplina)
  (Se inscrever para um semestre)
  (Se matricular na disciplina)
  (Cancelar matrícula na disciplina)
}

package "Ações do Professor" {
  (Consultar alunos matriculados)
}

package "Ações Administrativas" {
  (Gerenciar disciplinas)
  (Gerenciar professores)
  (Gerenciar alunos)
  (Encerrar inscrições para disciplina)
  (Gerar currículo)
  (Notificar Inscrição de aluno)
  (Cobrar disciplinas do semestre)
}

:Usuário: --> (Fazer login)
:Usuário: --> (Acessar o sistema)

:Professor: --> (Consultar alunos matriculados)

matricula --> (Notificar Inscrição de aluno)
(Notificar Inscrição de aluno) --> cobranca
cobranca --> (Cobrar disciplinas do semestre)
(Cobrar disciplinas do semestre) --> :Aluno:

:Aluno: --> (Escolher disciplinas)
:Aluno: --> (Verificar vagas na disciplina)
:Aluno: --> (Se inscrever para um semestre)
:Aluno: --> (Se matricular na disciplina)
:Aluno: --> (Cancelar matrícula na disciplina)
(Cancelar matrícula na disciplina).> (Se matricular na disciplina) :Extends
(Se inscrever para um semestre).> (Notificar Inscrição de aluno) :Include
(Notificar Inscrição de aluno) .> (Cobrar disciplinas do semestre) :Include
secretaria --> (Gerenciar disciplinas)
secretaria --> (Gerenciar professores)
secretaria --> (Gerenciar alunos)
secretaria --> (Encerrar inscrições para disciplina)
secretaria --> (Gerar currículo)

Usuário <|-- cobranca
Usuário <|-- matricula
Usuário <|-- secretaria
Usuário <|-- Professor
Usuário <|-- Aluno

@enduml
